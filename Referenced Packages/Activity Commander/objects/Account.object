        <deprecated>false</deprecated>
        <externalId>false</externalId>
        <formula>IF( IsNeglected__c, &quot;1-Red&quot;, IF(ISBLANK(Next_Activity_ID__c), &quot;2-Yellow&quot;, &quot;3-Green&quot;))</formula>
